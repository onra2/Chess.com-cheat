{
  "manifest_version": 3,

  "name": "Chess.com Best Move",
  "description": "",
  "version": "1.0",
  "action": {
    "default_title": "Chess.com Onra2",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": { 
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png" 
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://chess.com/*",
    "https://www.chess.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.chess.com/*"
      ],
      "js": [
        "lib/jquery-3.6.0.min.js",
        "lib/jcanvas.min.js",
        "js/content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/stockfish.js",
        "js/listener.js"
      ],
      "matches": [
        "*://*.chess.com/*"
      ]
    }
  ]
}